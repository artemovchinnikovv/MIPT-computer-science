void change_array(int *a, int N)
{
	using namespace std;

    for (int i=0;i<N;i++)
    {
        if (a[i]>=0)
        {
            if ((a[i] % 2) == 1) a[i]=a[i]+2;
            else a[i]=a[i]*2;
        }
        else
        {
            if ((-(a[i] % 2) % 2) == 1) a[i]=a[i]+2;
            else a[i]=a[i]*2;
        }
    }
}
